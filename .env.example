# ===========================================
# HomeBites Food Delivery App - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ===========================================
# Database Configuration
# ===========================================
DB_URL=jdbc:mysql://localhost:3306/food_app?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true&autoReconnect=true
DB_USERNAME=root
DB_PASSWORD=your_db_password

# ===========================================
# JWT Configuration
# ===========================================
# Generate a secure random string (minimum 256 bits for HS256)
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-for-hs256-algorithm
JWT_EXPIRATION=86400000

# ===========================================
# Razorpay Payment Gateway
# ===========================================
RAZORPAY_KEY=your_razorpay_key_id
RAZORPAY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ===========================================
# OlaMaps API
# ===========================================
OLAMAP_API_KEY=your_olamaps_api_key

# ===========================================
# Firebase Configuration (Push Notifications)
# ===========================================
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_CONFIG_PATH=firebase-service-account.json

# ===========================================
# FTP File Storage Configuration
# ===========================================
FTP_HOST=your_ftp_host
FTP_PORT=21
FTP_USERNAME=your_ftp_username
FTP_PASSWORD=your_ftp_password
FTP_BASE_DIR=/uploads
FTP_BASE_URL=https://your-cdn-url.com/uploads
FTP_PASSIVE_MODE=true

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8082

# ===========================================
# Spring Profile (dev/prod)
# ===========================================
SPRING_PROFILES_ACTIVE=dev
